	<string>$.fn.replaceUrl = function() {
		var regexp = /((ftp|http|https):\/\/(\w+:{0,1}\w*@)?(\S+)(:[0-9]+)?(\/|\/([\w#!:.?+=&amp;%@!\-\/]))?)/gi;
		this.each(function() {
			$(this).html(
				$(this).html().replace(regexp,'&lt;a href="$1"&gt;$1&lt;/a&gt;â€˜)
			);
		});
		return $(this);
	}

	//usage

	$('p').replaceUrl();</string>
